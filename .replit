[deployment]
deploymentTarget = "autoscale"
publicDir = "Chefai"
run = ["npx", "http-server", "recipe-app/dist/recipe-app/browser", "-p", "5000", "--proxy", "http://localhost:5000?"]
build = ["bash", "-c", "cd recipe-app && node inject-env.js && npm run build && cd .. && rm -rf Chefai && ln -sf recipe-app/dist/recipe-app/browser Chefai"]

