mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Angular Dev Server"

[[workflows.workflow]]
name = "Angular Dev Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd recipe-app && npm start"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

